@model WebSite.Models.Data.Picks.OptionPickLeg

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>OptionPickLeg</legend>

        @Html.HiddenFor(model => model.OptionPickLegId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Type)
            (1 = Call, 2 = Put)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Type)
            @Html.ValidationMessageFor(model => model.Type)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExpirationMonth)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExpirationMonth)
            @Html.ValidationMessageFor(model => model.ExpirationMonth)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExpirationYear)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExpirationYear)
            @Html.ValidationMessageFor(model => model.ExpirationYear)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StrikePrice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StrikePrice)
            @Html.ValidationMessageFor(model => model.StrikePrice)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EntryPrice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EntryPrice)
            @Html.ValidationMessageFor(model => model.EntryPrice)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExitPrice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExitPrice)
            @Html.ValidationMessageFor(model => model.ExitPrice)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ClosingDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ClosingDate)
            @Html.ValidationMessageFor(model => model.ClosingDate)
            (leave empty to use today's date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Quantity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Quantity)
            @Html.ValidationMessageFor(model => model.Quantity)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
        <p>
            <input type="submit" id="closeButton" name="closeButton" value="Close Leg" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
