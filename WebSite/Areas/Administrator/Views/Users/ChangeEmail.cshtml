@model WebSite.Models.UI.ChangeEmail

@{
    ViewBag.Title = "Change Email";
}

<h2>Change User's Email Address</h2>

<p>@(ViewBag.Message ?? "")</p>

@using (Html.BeginForm()) {
    
    @Html.ValidationSummary(false)

        <div class="editor-label">
            @Html.LabelFor(model => model.EmailAddressCurrent)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EmailAddressCurrent)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EmailAddressNew)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EmailAddressNew)
        </div>
        <p>
            <input type="submit" value="Change Email Address" />
        </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
