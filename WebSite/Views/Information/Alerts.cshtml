@model IEnumerable<WebSite.Models.Data.DailyAlert>
@{
    ViewBag.Title = "Market Alerts";
}
@section Description
{
    <meta name="description" content="Summary of our market alerts issued daily." />
}
<h2>Market Alerts</h2><br />
<table style="width: 100%;">
    <tbody>
    @foreach (WebSite.Models.Data.DailyAlert alert in Model)
    {
        <tr><td style="text-align: right;">@(TimeZoneInfo.ConvertTime(alert.PublishDate.Value, TimeZoneInfo.FindSystemTimeZoneById("Eastern Standard Time")))</td></tr>
        <tr><td>@Html.Raw(alert.Content)</td></tr>
        <tr><td><div class="separator"></div></td></tr>
    }
    </tbody>
</table>