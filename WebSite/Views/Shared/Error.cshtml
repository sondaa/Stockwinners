@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<hgroup class="title">
    <h1 class="error">Error.</h1>
    <h2 class="error">An error occurred while processing your request.</h2>

</hgroup>

<p>Controller: @Model.ActionName</p>
<p>@Model.ControllerName</p>
<p>@Model.Exception</p>
<p>@{foreach (var e in (Model.Exception as System.Data.Entity.Validation.DbEntityValidationException).EntityValidationErrors) 

         @e
}
</p>