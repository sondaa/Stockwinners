@model WebSite.Models.SubscriptionType

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>SubscriptionType</legend>

        @Html.HiddenFor(model => model.SubscriptionTypeId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SubscriptionFrequencyId, "SubscriptionFrequency")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SubscriptionFrequencyId", String.Empty)
            @Html.ValidationMessageFor(model => model.SubscriptionFrequencyId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsAvailableToUsers)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsAvailableToUsers)
            @Html.ValidationMessageFor(model => model.IsAvailableToUsers)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
